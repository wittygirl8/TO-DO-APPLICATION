<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

    <!--Main Site-->
    <main id ="site-main">
        <div class="container">
                <div class="box-nav d-flex justify-between">
                    <div class="filter">
                        <a href="/"><i class="fas fa-angle-double-left"></i> Back </a>
                    </div>
                </div>
                <div class="form-title text-center">
                    <h2 class="text-dark">Update Task</h2>
                    <span class="text-light">Use the below text area to update the task</span>
                </div>

            <!-- add item form -->
            <form method="PUT" id="update_task">
                <div class="update_task">
                    <div class="form-group">
                        <input type="hidden" name="id" value="<%= task._id%>">
                        <input type="text" name="item" value="<%= task.item%>" placeholder="YOGA">
                    </div>
            
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </main>
    <!--Main Site-->

